FROM conanio/clang9:latest

RUN sudo apt-get -qq update \
    && sudo apt-get install -y --no-install-recommends \
    libglu1-mesa-dev \
    mesa-common-dev \
    libxmu-dev \
    libxi-dev \
    qt5-default \
    libqt5webchannel5-dev \
    libqt5websockets5-dev \
    qtwebengine5-dev \
    libvulkan-dev \
    vulkan-validationlayers-dev \
    jq \
    python2.7 \
    zip \
    && sudo rm -rf /var/lib/apt/lists/*
